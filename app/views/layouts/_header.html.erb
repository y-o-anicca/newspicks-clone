  <div class="container">

    <!-- menu_left -->

    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li class="dropdown navbar-toggler">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="far fa-bars f0c9", style ="color:white;"></i> <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <% Article.statuses.each do |category_name, category_num| %>
            <li><%= link_to category_name, "/categories/#{category_num}" %></li>
            <% end %>
          </ul>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-brand-center">
        <li><%= link_to image_tag("newspaper.png", alt: "logo", class: "news_logo"), root_url %></li>
