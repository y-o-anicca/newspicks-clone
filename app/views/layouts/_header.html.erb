            </li>
            <li>
              <%= link_to "ログアウト", logout_path, method: :delete %>
            </li>
          </ul>
        </li>

        <li><%= link_to "お知らせ", "#" %></li>
        <li><%= link_to "ピック", new_article_path %></li>
        <% else %>

        <li><%= link_to "アカウント登録", signup_path %></li>
        <li><%= link_to "ログイン", login_path %></li>

        <% end %>
      </ul>
