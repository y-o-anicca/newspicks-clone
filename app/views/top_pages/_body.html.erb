<div class="col-md-9">

  	<br>
  	<br>

  	<div class="row col-md-offset-2">
        <% @articles = Article.all %>
				<% @articles.in_groups_of(3, false) do |row| %>
				<% for article in row %>
			<table>


				<thead>
					<tr>
						<td>
							<td><%= image_tag article.image %></td>
						</td>
					</tr>

				</thead>

				<tbody>

			  <tr>
			    <td><%= article.title %>	</td>
			  </tr>
				</tbody>


			</table>
			<% end %>
			<% end %>
  	</div>
</div>
